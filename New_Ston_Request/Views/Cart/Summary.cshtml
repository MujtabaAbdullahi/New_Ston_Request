@model New_Ston_Request.ViewModels.ProductUserVM
@{
    ViewData["Title"] = "Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i>&nbsp; Order Summery
                    </div>
                    <div class="col-6 text-right">
                        <a asp-action="Index" class="btn btn-outline-info btn-sm">Back to Cart</a>
                    </div>
                </div>
                <div class="card-body ">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-7 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">User Details</span>
                                    </h4>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label >Name</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="applicationUser.FullName" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Phone Number</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="applicationUser.PhoneNumber" class="form-control" />
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="applicationUser.Email" class="form-control" />
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-5 row">
                                <div class="col-12">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Summery</span>
                                    </h4>
                                    <ul class="list-group mb-3">
                                        @for(int i=0;i<Model.productList.Count();i++)
                                        {
                                            <input asp-for="@Model.productList[i].Id" type="hidden" class="form-control">
                                            <input asp-for="@Model.productList[i].Name" type="hidden" class="form-control">
                                            <li class="list-group-item d-flex justify-content-between">
                                                <div class="">
                                                    <h6 class="my-0">@Model.productList[i].Name</h6>
                                                    <small class="text-muted">Price : @((Model.productList[i].Price).ToString("c"))</small>
                                                </div>
                                            </li>
                                        }  
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-5 offset-md-7">
                            <button type="submit" class="btn btn-primary form-control">Submit Inquiry</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


