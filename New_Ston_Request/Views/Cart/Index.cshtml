@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_Notifications" />

<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container row">
            <div class="col-12">
                <div class="card mt-4">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i>&nbsp; Shopping Cart
                        </div>
                        <div class="col-6 text-right">
                            @if (Model.Count() > 0)
                            {
                                <button asp-action="Summary" class="btn btn-outline-info btn-sm">
                                    Continue Shopping
                                </button>
                            }

                            
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-none d-lg-block">
                            <div class="row" style="color: #821f3d">
                                <div class="col-lg-2">
                                    
                                </div>
                                <div class="col-12 col-lg-7">
                                    Product Details
                                </div>
                                <div class="col-12 col-lg-2">
                                    Price per sqft
                                </div>
                            </div>
                        </div>
                        <hr />
                        @if(Model.Count()>0)
                        {
                            @foreach (var pro in Model)
                            {
                                <div class="row h-100">
                                    <div class="col-4 col-md-2 text-center py-2">
                                        <img src="@WC.ProductImagePath@pro.Image" class="rounded" width="100%" />
                                    </div>
                                    <div class="col-8 col-lg-7">
                                        <h5>@pro.Name</h5>
                                        <div style="font-size: 11px;">@pro.ShortDesc</div>
                                    </div>
                                    <div class="col-3 col-lg-2 pt-lg-4">
                                        <span style="font-size: 17px">
                                            @string.Format("{0:c0}",pro.Price)
                                            @*@((pro.Price).ToString("c"))*@
                                        </span> / sqft
                                    </div>
                                    <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                        <a asp-action="RemoveCart" asp-route-id="@pro.Id" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-warning">No product is added to shopping cart!</p>
                        }

                        <hr />
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6 col-md-3 offset-md-9">
                                 @if (Model.Count() > 0)
                                {

                                    <button class="btn btn-success form-control" type="submit">
                                        <span>Continue</span>
                                    </button>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>