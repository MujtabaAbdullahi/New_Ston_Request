@model IEnumerable<New_Ston_Request.Models.Product>
@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";

}

<partial name="_Notifications" />

<div class="container p-3">

    <div class="row">
        <div class="col-6 text-primary">
            <h2>Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary"><i class="fa fa-plus"></i> &nbsp;Add New Product</a>
        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered" style="width: 100%;">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Application</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var plist in Model)
                {
                    <tr>
                        <td width="30%">@plist.Name</td>
                        <td width="10%">@plist.Price&nbsp;AF</td>
                        <td width="20%">@plist.Category.Name</td>
                        <td width="20%">@plist.ApplicationType.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-id="@plist.Id" asp-action="Upsert" class="btn btn-primary mx-2"><i class="fas fa-edit"></i></a>
                                <a asp-route-id="@plist.Id" asp-action="Delete" class="btn btn-danger mx-2"><i class="fas fa-trash-alt"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Product is exist!</p>
    }

</div>