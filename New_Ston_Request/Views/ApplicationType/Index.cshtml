@model IEnumerable<New_Ston_Request.Models.ApplicationType>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">

    <div class="row">
        <div class="col-6 text-primary">
            <h2>Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">Add New Application Type</a>
        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered" style="width: 100%;">
            <thead>
                <tr>
                    <th>Application Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appl in Model)
                {
                    <tr>
                        <td>@appl.Name</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Application Type is exist!</p>
    }

</div>
